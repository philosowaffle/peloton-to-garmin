{
  "App": {
    "OutputDirectory": "./Output",
    "SyncHistoryDbPath": "./Output/syncHistory.json",
    "EnablePolling": true,
    "PollingIntervalSeconds": 30
  },

  "Peloton": {
    "Email": "peloton@gmail.com",
    "Password": "peloton",
    "NumWorkoutsToDownload": 1
  },

  "Garmin": {
    "Email": "garmin@gmail.com",
    "Password": "garmin",
    "Upload": false,
    "IgnoreSyncHistory": false
  },

  "Observability": {

    "Prometheus": {
      "Enabled": false,
      "Port": 4000
    },

    "Jaeger": {
      "Enabled": false,
      "AgentHost": "localhost",
      "AgentPort": 6831
    },

    "Serilog": {
      "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.RollingFile", "Serilog.Sinks.Seq", "Serilog.Sinks.Elasticsearch" ],
      "MinimumLevel": "Information",
      "WriteTo": [
        { "Name": "Console" },
        {
          "Name": "File",
          "Args": { "path": "./Output/log.txt" }
        },
        {
          "Name": "Seq",
          "Args": { "serverUrl": "http://localhost:5341" }
        },
        {
          "Name": "Elasticsearch",
          "Args": {
            "nodeUris": "http://localhost:9200",
            "indexFormat": "p2g-logs-{0:yyyy.MM.DD}"
          }
        }
      ]
    },
  },

  "DoNotEdit_ConfigVersion": 2
}