{
  "App": {
    "OutputDirectory": "./Output",
    "SyncHistoryDbPath": "./Output/syncHistory.json",
    "EnablePolling": true,
    "PollingIntervalSeconds": 30
  },

  "Peloton": {
    "Email": "peloton@gmail.com",
    "Password": "peloton",
    "NumWorkoutsToDownload": 1
  },

  "Garmin": {
    "Email": "garmin@gmail.com",
    "Password": "garmin",
    "Upload": false,
    "IgnoreSyncHistory": false
  },

  "Observability": {
    "Prometheus": {
      "Enabled": false,
      "Port": 4000
    },

    "Jaeger": {
      "Enabled": false,
      "AgentHost": "localhost",
      "AgentPort": 6831
    },

    "Serilog": {
        "Using":  [ "Serilog.Sinks.Console", "Serilog.Sinks.RollingFile" ],
        "MinimumLevel": "Information",
        "WriteTo": [
          { "Name": "Console" },
          { "Name": "File", "Args": { "path": "./Output/log.txt" } }
        ]
      },
  },

  "DoNotEdit_ConfigVersion": 2
}