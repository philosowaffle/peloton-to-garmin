    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/peloton-to-garmin.py",
            "console": "integratedTerminal",
            "args": [
            ],
        },
        {
            "name": "Upload",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/peloton-to-garmin.py",
            "console": "integratedTerminal",
            "args": [
                "-garmin_enable_upload", "true"
            ],
        },
        {
            "name": "Archive, Upload",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/peloton-to-garmin.py",
            "console": "integratedTerminal",
            "args": [
                "-garmin_enable_upload", "true",
                "-retain_files", "false",
                "-archive_files", "true",
                "-archive_by_type", "true"
            ],
        },
        {
            "name": "Archive, Retain",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/peloton-to-garmin.py",
            "console": "integratedTerminal",
            "args": [
                "-retain_files", "true",
                "-archive_files", "true",
                "-archive_by_type", "true"
            ],
        },
        {
            "name": "Skip Download, Retain",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/peloton-to-garmin.py",
            "console": "integratedTerminal",
            "args": [
                "-retain_files", "true",
                "-skip_download", "true"
            ],
        },
        {
            "name": "Archive",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/peloton-to-garmin.py",
            "console": "integratedTerminal",
            "args": [
                "-archive_files", "true",
                "-archive_by_type", "true"
            ]
        },
        {
            "name": "Archive, Upload",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/peloton-to-garmin.py",
            "console": "integratedTerminal",
            "args": [
                "-garmin_enable_upload", "true",
                "-archive_files", "true"
            ],
        },
    ]
}