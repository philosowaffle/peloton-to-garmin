{
  "App": {
    "OutputDirectory": "./output",
    "WorkingDirectory": "working",
    "SyncHistoryDbPath": "./syncHistory.json",
    "EnablePolling": true,
    "PollingIntervalSeconds": 86400,
    "PythonAndGUploadInstalled": true
  },

  "Format": {
    "Fit": true,
    "Json": false,
    "Tcx": false,
    "SaveLocalCopy": false
  },

  "Peloton": {
    "Email": "peloton@gmail.com",
    "Password": "peloton",
    "NumWorkoutsToDownload": 1,
    "ExcludeWorkoutTypes": [ "meditation" ]
  },

  "Garmin": {
    "Email": "garmin@gmail.com",
    "Password": "garmin",
    "Upload": false,
    "FormatToUpload": "fit"
  },

  "Observability": {

    "Prometheus": {
      "Enabled": false,
      "Port": 4000
    },

    "Jaeger": {
      "Enabled": false,
      "AgentHost": "localhost",
      "AgentPort": 6831
    },

    "Serilog": {
      "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File", "Serilog.Sinks.Elasticsearch" ],
      "MinimumLevel": "Debug",
      "WriteTo": [
        { "Name": "Console" },
        {
          "Name": "File",
          "Args": {
            "path": "./output/log.txt",
            "rollingInterval": "Day",
            "retainedFileCountLimit": 7
          }
        },
        {
          "Name": "Elasticsearch",
          "Args": {
            "nodeUris": "http://192.168.1.95:9200",
            "indexFormat": "p2g-logs-{0:yyyy.MM.dd}"
          }
        }
      ]
    }
  }
}