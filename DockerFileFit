FROM mcr.microsoft.com/dotnet/core/sdk:3.1 AS build

COPY . /build
WORKDIR /build
RUN dotnet publish /build/PelotonToFit/PelotonToFitConsole/PelotonToFitConsole.csproj -c Release -r linux-x64 -o /build/published

FROM mcr.microsoft.com/dotnet/runtime:3.1-alpine

ENV PYTHONUNBUFFERED=1
RUN apk add --update --no-cache python3 && ln -sf python3 /usr/bin/python
RUN python3 -m ensurepip
RUN pip3 install --no-cache --upgrade pip setuptools

COPY --from=build /build/published/ /app/
COPY --from=build /build/requirements.txt /app/requirements.txt
COPY --from=build /build/LICENSE /app/LICENSE
COPY --from=build /build/garminUpload.py /app/garminUpload.py
COPY --from=build /build/__init__.py /app/__init__.py
COPY --from=build /build/PelotonToFit/configuration.example.json /app/configuration.local.json
COPY --from=build /build/lib /app/lib/

WORKDIR /app
RUN pip3 install -r requirements.txt
RUN chmod +x garminUpload.py
ENTRYPOINT ["./app/PelotonToFitConsole"]