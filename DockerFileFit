FROM mcr.microsoft.com/dotnet/core/sdk:3.1 AS build

COPY . /opt/build

RUN dotnet publish /opt/build/PelotonToFit/PelotonToFitConsole/PelotonToFitConsole.csproj -c Release -r linux-x64 -o /opt/build/published && \

FROM python:alpine

WORKDIR /opt/app

COPY --from=build /opt/build/published/ /opt/app/
COPY --from=build /opt/build/requirements.txt /opt/app/requirements.txt
COPY --from=build /opt/build/LICENSE /opt/app/LICENSE
COPY --from=build /opt/build/garminUpload.py /opt/app/garminUpload.py
COPY --from=build /opt/build/__init__.py /opt/app/__init__.py
COPY --from=build /opt/build/PelotonToFit/configuration.example.json /opt/app/configuration.local.json
COPY --from=build /opt/build/lib /opt/app/

RUN pip install -r requirements.txt
RUN chmod +x garminUpload.py
RUN chmod +x PelotonToFitConsole
CMD ./PelotonToFitConsole
