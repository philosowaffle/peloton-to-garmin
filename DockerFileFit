FROM mcr.microsoft.com/dotnet/core/sdk:3.1 AS build-env

RUN dotnet publish ./PelotonToFit/PelotonToFitConsole/PelotonToFitConsole.csproj -c Release -r linux-x64 -o ./published

COPY ./published /
WORKDIR ./published
RUN ls -l

FROM python:alpine

COPY --from=build-env /published/ /opt/app/
COPY ./requirements.txt /opt/app/requirements.txt
COPY ./LICENSE /opt/app/LICENSE
COPY ./garminUpload.py /opt/app/garminUpload.py
COPY ./__init__.py /opt/app/__init__.py
COPY ./PelotonToFit/configuration.example.json /opt/app/configuration.local.json
COPY ./lib /opt/app/

WORKDIR /opt/app
RUN pip install -r requirements.txt
RUN chmod +x garminUpload.py
RUN chmod +x PelotonToFitConsole
CMD ./PelotonToFitConsole