{
    "Api": {
      "HostUrl": "http://p2g-api"
    },
  
    "Observability": {
  
      "Prometheus": {
        "Enabled": false,
        "Port": 4000
      },
  
      "Jaeger": {
        "Enabled": false,
        "AgentHost": "localhost",
        "AgentPort": 6831
      },

      "Serilog": {
        "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
        "MinimumLevel": {
          "Default": "Information",
          "Override": {
            "Microsoft": "Error",
            "System": "Error"
          }
        },
        "WriteTo": [
          { "Name": "Console" },
          {
            "Name": "File",
            "Args": {
              "path": "./output/log.txt",
              "rollingInterval": "Day",
              "retainedFileCountLimit": 7
            }
          }
        ]
      }
    }
  }