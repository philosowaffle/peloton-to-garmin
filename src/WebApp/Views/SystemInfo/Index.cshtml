        <li class="list-group-item"><a href="@Model.Documentation">Documentation</a></li>
        <li class="list-group-item"><a href="@Model.Forums">Forums</a></li>
        <li class="list-group-item"><a href="@Model.Issues">Report an Issue</a></li>
        <li class="list-group-item"><a href="@Model.Donate">Donate</a></li>
    </ul>


